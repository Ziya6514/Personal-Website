<%- include("../../views/partials/admin/header") %>

<style>
    .edit-category-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh; /* Centers the form vertically */
        background-color: #f2f2f2;
    }

    .edit-category-container {
        padding: 20px;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        width: 100%; /* Ensures responsiveness */
    }

    .edit-category-title {
        font-weight: 600;
        font-size: 24px;
        color: #333;
        margin-bottom: 20px;
        text-align: center;
    }

    .form-label {
        font-weight: 500;
        color: #555;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        font-weight: 500;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .form-control {
        border-radius: 6px;
    }
</style>

<div class="edit-category-wrapper">
    <div class="edit-category-container">
        <h2 class="edit-category-title">Edit Category</h2>
        <form method="post" action="/admin/editCategory/<%= category._id %>">
            <div class="mb-4">
                <label for="product_name" class="form-label">Category Name</label>
                <input type="text" name="categoryName" value="<%= category.name %>" class="form-control border">
            </div>
            <div class="mb-4">
                <label class="form-label">Description</label>
                <textarea name="description" class="form-control border"><%= category.description %></textarea>
            </div>
            <div class="d-grid text-center mt-4">
                <button class="btn btn-primary" type="submit">Update Category</button>
            </div>
        </form>
    </div>
</div>

<%- include("../../views/partials/admin/footer") %>
