<%- include("../../views/partials/user/header") %>
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<style>
    /* General Styles */
    body {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        background-color: #f5f5f5;
        color: #333;
        margin: 0;
        padding: 0;
    }

    .main {
        margin: 20px 0;
    }

    .container {
        max-width: 1200px;
        margin: auto;
        padding: 0 15px;
    }

    /* Breadcrumb Styles */
    .breadcrumb {
        display: flex;
        gap: 5px;
        font-size: 14px;
        color: #666;
    }

    .breadcrumb a {
        text-decoration: none;
        color: #007bff;
    }

    .breadcrumb span {
        color: #999;
    }

    /* Product Detail Styles */
    .product-detail {
        background: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-wrap: wrap;
    }

    .detail-gallery {
        position: relative;
        flex: 1 1 50%;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .product-image-slider img {
        width: 100%;
        border-radius: 10px;
        object-fit: cover;
    }

    .slider-nav-thumbnails {
        display: flex;
        gap: 10px;
        justify-content: center;
        margin-top: 20px;
    }

    .slider-nav-thumbnails div {
        flex-shrink: 0;
        width: 80px;
        height: 80px;
        cursor: pointer;
    }

    .slider-nav-thumbnails img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border: 1px solid #ddd;
        border-radius: 5px;
        transition: transform 0.3s;
    }

    .slider-nav-thumbnails img:hover {
        transform: scale(1.1);
    }

    /* Detail Info Styles */
    .detail-info {
        flex: 1 1 50%;
        padding: 20px;
    }

    .title-detail {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .product-detail-rating {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
    }

    .product-price-cover {
        margin-bottom: 15px;
    }

    .product-price .text-brand {
        color: #28a745;
        font-size: 22px;
        font-weight: bold;
    }

    .product-price .old-price {
        text-decoration: line-through;
        color: #999;
        margin-left: 10px;
    }

    .save-price {
        color: #ff5722;
    }

    .short-desc p {
        margin-bottom: 1;
        color: #555;
    }

    /* Extra Links */
    .detail-extralink {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-top: 20px;
    }

    .detail-qty {
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #ddd;
        border-radius: 5px;
        width: 100px;
        height: 40px;
    }

    .detail-qty .qty-down, .detail-qty .qty-up {
        color: #333;
        padding: 5px;
        cursor: pointer;
    }

    .product-extra-link2 button {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .product-extra-link2 button:hover {
        background-color: #0056b3;
    }

    .action-btn {
        color: #333;
        font-size: 18px;
        transition: color 0.3s;
    }

    .action-btn:hover {
        color: #007bff;
    }

    /* Meta Info */
    .product-meta {
        margin-top: 20px;
    }

    .product-meta li {
        list-style: none;
        font-size: 14px;
    }

    /* Responsive Design */
    @media screen and (max-width: 768px) {
        .product-detail {
            flex-direction: column;
        }

        .detail-gallery, .detail-info {
            width: 100%;
        }
    }

    /* Golden Stars */
    .golden {
        color: gold;
    }

    /* Centering Content */
    .product-detail {
        justify-content: center;
    }
    .product-price-cover {
    border-top: 2px solid grey; /* Line at the top */
    border-bottom: 2px solid grey; /* Line at the bottom */
    padding: 10px;
}

.product-price {
    padding-top: 10px; /* Adjust as necessary */
    padding-bottom: 10px; /* Adjust as necessary */
}
.product-meta {
    border-top: 2px solid grey; /* Adds a top border */
    border-bottom: 2px solid grey; /* Adds a bottom border */
    padding: 10px 0; /* Adds padding between the borders and content */
}

.product-meta ul {
    margin: 0; /* Remove default margin from the list */
    padding: 0; /* Remove default padding from the list */
}

.product-meta li {
    list-style-type: none; /* Removes default list bullets */
    padding: 5px 0; /* Adds spacing between list items */
}


    

    .product-size-chart h4 {
        font-size: 18px;
        margin-bottom: 15px;
        color: #333;
    }

    .size-options {
        display: flex;
        gap: 15px;
        margin-bottom: 15px;
    }

    .size-option {
        display: flex;
        align-items: center;
        cursor: pointer;
    }

    .size-option input[type="radio"] {
        display: none;
    }

    .size-label {
        display: inline-block;
        width: 40px;
        height: 40px;
        text-align: center;
        line-height: 40px;
        background-color: #f5f5f5;
        border-radius: 5px;
        font-weight: bold;
        font-size: 16px;
        transition: background-color 0.3s;
    }

    .size-option input[type="radio"]:checked + .size-label {
        background-color: #007bff;
        color: #fff;
    }

    .size-description {
        font-size: 14px;
        color: #555;
        margin-top: 10px;
    }

    .size-option:hover .size-label {
        background-color: #ddd;
    }


</style>

<main class="main">
    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a href="#" rel="nofollow">Home > </a>
                <span></span>   Fashion >
                <span></span>   Product Detail Page >
            </div>
        </div>
    </div>

    <section class="mt-50 mb-50">
        <div class="container">
            <div class="row">
                <div class="col-lg-9">
                    <div class="product-detail accordion-detail">
                        <div class="row mb-50">
                            <div class="col-md-6 col-sm-12 col-xs-12">
                                <div class="detail-gallery">
                                    <span class="zoom-icon"><i class="fi-rs-search"></i></span>

                                    <div class="product-image-slider">
                                        <img src="/uploads/re-image/<%= product.productImage[0] %>" alt="product image">
                                    </div>

                                    <div class="slider-nav-thumbnails pl-15 pr-15">
                                        <% for (let i = 0; i < product.productImage.length; i++) { %>
                                            <div>
                                                <img style="object-fit: contain;" src="/uploads/re-image/<%= product.productImage[i] %>" alt="product image <%= i + 1 %>">
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 col-sm-12 col-xs-12">
                                <div class="detail-info">
                                    <h2 class="title-detail"><%= product.productName %></h2>

                                    <div class="product-detail-rating">
                                        <div class="pro-details-brand">
                                            <span>Brand:<a href="#"><%= product.brand %></a></span>
                                        </div>
                                        <div class="product-rate-cover text-end">
                                            <div class="product-rate d-inline-block">
                                                <div class="product-rating" style="width: 90%"></div>
                                            </div>
                                            <span class="font-small ml-5 text-muted">
                                                <i class="fas fa-star golden"></i>
                                                <i class="fas fa-star golden"></i>
                                                <i class="fas fa-star golden"></i>
                                                <i class="fas fa-star golden"></i>
                                                <i class="fas fa-star-half-alt golden"></i>(25 reviews)
                                            </span>
                                        </div>
                                    </div>

                                    <div class="clearfix product-price-cover">
                                        <div class="product-price primary-color float-left">
                                            <ins><span class="text-brand"><%= product.salePrice %></span></ins>
                                            <ins><span class="old-price font-md ml-15"><%= product.regularPrice %></span></ins>
                                            <span class="save-price font-md color3 ml-15">
                                                <% if (!totalOffer) { %>
                                                    No Offers
                                                <% } else { %>
                                                    <%= totalOffer %> % Offer
                                                <% } %>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="product-size-chart mb-30">
                                        <h4>Select Size</h4>
                                        <div class="size-options">
                                            <label class="size-option">
                                                <input type="radio" name="size" value="S" id="size-s">
                                                <span class="size-label">S</span>
                                            </label>
                                            <label class="size-option">
                                                <input type="radio" name="size" value="M" id="size-m">
                                                <span class="size-label">M</span>
                                            </label>
                                            <label class="size-option">
                                                <input type="radio" name="size" value="L" id="size-l">
                                                <span class="size-label">L</span>
                                            </label>
                                            <label class="size-option">
                                                <input type="radio" name="size" value="XL" id="size-xl">
                                                <span class="size-label">XL</span>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="bt-1 border-color-1 mt-15 mb-15"></div>

                                    <div class="short-desc mb-30">
                                        <p><%= product.description %></p>
                                    </div>

                                    <div class="product_sort_info font-xs mb-30">
                                        <ul>
                                            <li><i class="fa-solid fa-crown"></i> 1 Year Brand Warranty</li>
                                            <li><i class="fa-solid fa-recycle"></i> 30 Day Return Policy</li>
                                            <li><i class="fa-regular fa-credit-card"></i> Cash on Delivery available</li>
                                        </ul>
                                    </div>
                                    

                                    <div class="bt-1 border-color-1 mt-30 mb-30"></div>
                                    

                                    <div class="detail-extralink">
                                        <div class="detail-qty border radius">
                                            <a href="#" class="qty-down"><i class="fi-rs-angle-small-down"></i></a>
                                            <span class="qty-val" id="quantity">1</span>
                                            <a href="#" class="qty-up"><i class="fi-rs-angle-small-up"></i></a>
                                        </div>
                                        <div class="product-extra-link2">
                                            <button class="button add-to-cart" type="button">Add to Cart</button>
                                            <!-- <button class="button wishlist-btn" type="button"><i class="fi-rs-heart"></i></button> -->
                                        </div>
                                    </div>

                                    <div class="product-meta">
                                        <ul>
                                            <li><span>SKU:</span> <a href="#">B1245</a></li>
                                            <li><span>Availablity:</span><a href="#">10 Items in Stock</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                <!-- <div class="col-lg-3">
                    <div class="product-related">
                        <h4>Related Products</h4>
                         You can add related products here -->
                    </div>
                </div> 
            </div>
        </div>
    </section>
</main>

<%- include("../../views/partials/user/footer") %>
