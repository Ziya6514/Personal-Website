<%- include("../../views/partials/user/header") %>
<style>
    /* General Styles */
body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
    background-color: #f5f5f5;
    color: #333;
    margin: 0;
    padding: 0;
}

.main {
    margin: 20px 0;
}

.container {
    max-width: 1200px;
    margin: auto;
    padding: 0 15px;
}

/* Breadcrumb Styles */
.breadcrumb {
    display: flex;
    gap: 5px;
    font-size: 14px;
    color: #666;
}

.breadcrumb a {
    text-decoration: none;
    color: #007bff;
}

.breadcrumb span {
    color: #999;
}

/* Product Detail Styles */
.product-detail {
    background: #fff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.detail-gallery {
    position: relative;
}

.product-image-slider img {
    width: 100%;
    border-radius: 10px;
    object-fit: cover;
}

.slider-nav-thumbnails {
    display: flex; /* Align items in a row */
    gap: 10px; /* Add space between thumbnails */
    justify-content: center; /* Center align thumbnails */
    margin-top: 20px; /* Add some spacing above thumbnails */
}

.slider-nav-thumbnails div {
    flex-shrink: 0; /* Prevent items from shrinking */
    width: 80px; /* Thumbnail width */
    height: 80px; /* Thumbnail height */
    cursor: pointer; /* Pointer cursor for thumbnails */
}

.slider-nav-thumbnails img {
    width: 100%; /* Make the image take full width of the container */
    height: 100%; /* Make the image take full height of the container */
    object-fit: cover; /* Ensure the image fits well */
    border: 1px solid #ddd; /* Optional: Add a border to the images */
    border-radius: 5px; /* Optional: Rounded corners for images */
    transition: transform 0.3s; /* Add hover animation */
}

.slider-nav-thumbnails img:hover {
    transform: scale(1.1); /* Slightly enlarge image on hover */
}


/* Detail Info Styles */
.detail-info {
    padding: 20px;
}

.title-detail {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 10px;
}

.product-detail-rating {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
}

.product-price-cover {
    margin-bottom: 15px;
}

.product-price .text-brand {
    color: #28a745;
    font-size: 22px;
    font-weight: bold;
}

.product-price .old-price {
    text-decoration: line-through;
    color: #999;
    margin-left: 10px;
}

.save-price {
    color: #ff5722;
}

.short-desc p {
    margin: 0;
    color: #555;
}

/* Extra Links */
.detail-extralink {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-top: 20px;
}

.detail-qty {
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid #ddd;
    border-radius: 5px;
    width: 100px;
    height: 40px;
}

.detail-qty .qty-down, .detail-qty .qty-up {
    color: #333;
    padding: 5px;
    cursor: pointer;
}

.product-extra-link2 button {
    background-color: #007bff;
    color: #fff;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s;
}

.product-extra-link2 button:hover {
    background-color: #0056b3;
}

.action-btn {
    color: #333;
    font-size: 18px;
    transition: color 0.3s;
}

.action-btn:hover {
    color: #007bff;
}

/* Meta Info */
.product-meta {
    margin-top: 20px;
}

.product-meta li {
    list-style: none;
    font-size: 14px;
}

/* Responsive Design */
@media screen and (max-width: 768px) {
    .product-detail {
        flex-direction: column;
    }

    .detail-gallery, .detail-info {
        width: 100%;
    }
}

</style>
<main class="main">
 <div class="page-header breadcrumb-wrap">
     <div class="container">
         <div class="breadcrumb">
             <a href="#" rel="nofollow">Home</a>
             <span></span> Fashion
             <span></span>product detail page
         </div>
     </div>
 </div>
