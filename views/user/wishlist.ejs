<%- include("../../views/partials/user/header") %>
<main class="main">
   <div class="page-header breadcrumb-wrap">
       <div class="container">
           <div class="breadcrumb">
               <a href="/" rel="nofollow">Home</a>
               <span></span> Shop
               <span></span> My Wishlist
           </div>
       </div>
   </div>

   <section class="mt-50 mb-50">
       <div class="container">
           <div class="row">
               <div class="col-12">
                   <div class="table-responsive">
                       <table class="table shopping-summery text-center clean">
                           <thead>
                               <tr class="main-heading">
                                   <th scope="col">Image</th>
                                   <th scope="col">Name</th>
                                   <th scope="col">Price</th>
                                   <th scope="col">Add to Cart</th>
                                   <th scope="col">Remove</th>
                               </tr>
                           </thead>
                           <tbody>
                            <%if(wishlist.length>0){%>
                               <%for(let product of wishlist ){%>
                                       <tr>
                                           <td class="image product-thumbnail">
                                               <img src="/uploads/re-image/<%=product.productImage[0]%>" class="wishlist-image"/>
                                           </td>
                                           <td class="product-des product-name">
                                               <h5 class="product-name">
                                                   <a href="">
                                                      <%=product.productName%>
                                                   </a>
                                               </h5>
                                               <p class="font-xs">
                                                <%=product.category.name%>
                                                   <br />
                                                  <%=product.brand%>
                                               </p>
                                           </td>
                                           <td class="price" data-title="Price">â‚¹<span>
                                              <%=product.salePrice %>
                                           </span></td>
                                           <td class="text-center" data-title="Add to Cart">
                                               <a href="#" onclick="" class="btn btn-sm">Add to Cart</a>
                                           </td>
                                           <td class="action" data-title="Remove">
                                               <a class="btn btn-sm remove-btn" href="#" onclick="confirmRemove('<%=product._id%>')">
                                                   <i class="fa-solid fa-trash remove-icon"></i> Remove
                                               </a>
                                           </td>
                                       </tr>
                               <%}%>
                               <%}else{%>
                                   <tr>
                                       <td colspan="5" class="text-center">
                                           <p class="lead mb-4">No items found in Wishlist</p>
                                       </td>
                                   </tr>
                               <%}%>
                           </tbody>
                       </table>
                   </div>
               </div>
           </div>
       </div>
   </section>
</main>

<%- include("../../views/partials/user/footer") %>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function confirmRemove(productId){
        Swal.fire({
            title:'Are you sure?',
            text:"You won't be able to revert this",
            icon:'warning',
            showCancelButton:true,
            confirmButtonColor:'#3085d6',
            cancelButtonColor:'#d33',
            confirmButtonText:'Yes, remove it!'
        }).then((result)=>{
            if(result.isConfirmed){
                window.location.href=`/removeFromWishlist?productId=${productId}`
            }
        })
    }
</script>

<!-- Custom CSS -->
<style>
   /* Style for smaller images in the wishlist */
   .wishlist-image {
       width: 60px; /* Set the image size */
       height: 60px;
       object-fit: cover;
   }

   /* Remove button styles */
   .remove-btn {
       display: flex;
       align-items: center;
       color: #d33;
       font-size: 14px;
       transition: color 0.3s ease;
   }

   .remove-btn:hover {
       color: #3085d6; /* Change color on hover */
   }

   .remove-icon {
       margin-right: 8px; /* Space between icon and text */
   }

   /* Table styling */
   .table th, .table td {
       vertical-align: middle;
   }

   .table .main-heading th {
       background-color: #f8f9fa;
       font-weight: bold;
   }

   /* Style for the action (Remove) column */
   .action {
       text-align: center;
   }

   /* Styling for the breadcrumb */
   .breadcrumb a {
       color: #007bff;
   }

   .breadcrumb a:hover {
       text-decoration: underline;
   }
</style>
