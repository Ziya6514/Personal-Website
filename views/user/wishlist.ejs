<%- include("../../views/partials/user/header") %>
<style>
    .breadcrumb {
        display: flex; /* Arrange items in a row */
        align-items: center; /* Vertically align items */
        gap: 8px; /* Add space between breadcrumb items */
        font-size: 14px; /* Adjust font size if needed */
    }

    .breadcrumb a {
        text-decoration: none; /* Remove underline from links */
        color: darkgreen; /* Adjust link color */
        padding: 0 5px; /* Optional padding around links */
        transition: color 0.3s ease; /* Smooth color change on hover */
    }

    .breadcrumb a:hover {
        color: #0056b3; /* Darker color on hover */
    }

    .breadcrumb span {
        color: #6c757d; /* Separator color */
        font-size: 14px; /* Match font size */
    }

    .table .image img {
        max-width: 100px; /* Set a maximum width for images */
        max-height: 100px; /* Set a maximum height for images */
        object-fit: cover; /* Ensure images do not stretch */
        border-radius: 5px; /* Optional: Add rounded corners */
    }

    .table .image {
        text-align: center; /* Center-align the images */
    }

   .table .btn {
    display: inline-block; /* Make sure the button is shown */
    visibility: visible; /* Make sure it's not hidden */
    opacity: 1; /* Ensure full opacity */
    color: #fff; /* Set text color */
    background-color: darkgreen; /* Button background color */
}

</style>
<main class="main">


   <div class="page-header breadcrumb-wrap">
       <div class="container">
           <div class="breadcrumb">
               <a href="/" rel="nofollow">Home</a>
               <span></span> Shop
               <span></span> My Wishlist
           </div>
       </div>
   </div>


   <section class="mt-50 mb-50">
       <div class="container">
           <div class="row">
               <div class="col-12">
                   <div class="table-responsive">
                       <table class="table shopping-summery text-center clean">
                           <thead>
                               <tr class="main-heading">
                                   <th scope="col">Image</th>
                                   <th scope="col">Name</th>
                                   <th scope="col">Price</th>
                                   <th scope="col">Add to Cart</th>
                                   <th scope="col">Remove</th>
                               </tr>
                           </thead>
                           <tbody>
                             <%if(wishlist.length > 0){%>

                                <%for(let product of wishlist){%>
                                       <tr>
                                           <td class="image product-thumbnail">
                                               <img src="/uploads/re-image/<%=product.productImage[0]%>" />
                                           </td>
                                           <td class="product-des product-name">
                                               <h5 class="product-name">
                                                   <a href="">
                                                      <%=product.productName%>
                                                   </a>
                                               </h5>
                                               <p class="font-xs">
                                                <%=product.category.name%>
                                                   <br />
                                                   <%=product.brand%>

                                               </p>
                                           </td>
                                           <td class="price" data-title="Price">â‚¹<span>
                                            <%=product.salePrice%>

                                           </span></td>
                                           <td class="text-center" data-title="Add to Cart">
                                               <a href="#" onclick="" class="btn btn-sm">Add to Cart</a>
                                           </td>
                                           <td class="action" data-title="Remove">
                                               <a class="btn btn-sm" href="#" onclick="confirmRemove('<%=product._id%>')">
                                                <i class="fa-solid fa-trash"></i>
                                               </a>
                                           </td>
                                       </tr>
                                       <%}%>
                                       <%}else{%>
                                   <tr>
                                       <td colspan="5" class="text-center">
                                           <p class="lead mb-4">No items found in Wishlist</p>
                                       </td>
                                   </tr>
                                   <%}%>
                           </tbody>
                       </table>
                   </div>
               </div>
           </div>
       </div>
   </section>
</main>
<%- include("../../views/partials/user/footer") %>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    function confirmRemove(productId) {
    Swal.fire({
        title: 'Are you sure?',
        text: "You won't be able to revert this",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, remove it!'
    }).then((result) => {
        if (result.isConfirmed) {
            window.location.href = `/removeFromWishlist?productId=${productId}`;
        }
    });
}
</script>




